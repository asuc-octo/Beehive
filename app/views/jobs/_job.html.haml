- actions = job.actions(@current_user)
%div{:class => "job_***REMOVED***{cycle('even', 'odd')}", :id => "job***REMOVED***{job.id}"}
  .job_table_left
    .job_title
      = link_to job.title, job_path(job)
    - job_tags = job.tag_list
    %div
      .job_desc
        %span{:id => "job_desc_***REMOVED***{job.id}"}
          = truncate job.desc, :length => 200, :omission => '...'
        %span{:id => "job_***REMOVED***{job.id}", :style => "display:none;overflow:hidden;height0px;"}
          = job.desc
        .posted
          Posted: ***REMOVED***{job.created_at.strftime("%m/%d/%Y")}
      - if job_tags.present?
        = render partial: 'jobs/tag', collection: job.tag_list
%hr